@charset "utf-8"
/* version 1.1 */

/* カラム */
[class*="up-col"]
  display flex
  flex-wrap wrap

for gapx-px in range(0,100,10)
  .up-col3-{gapx-px}
    column-gap (gapx-px)px
    > *
      width "calc((100% - %spx * 2) / 3)" % gapx-px
for gapx in range(1,10,1)
  .up-col3-{gapx}\\\%
    column-gap (gapx)%
    > *
      width "calc((100% - %s% * 2) / 3)" % gapx

@media only screen and (max-width: 1024px)
  for gapx-px in range(0,100,10)
    .up-col3-{gapx-px}\\\@tb
      column-gap (gapx-px)px
      > *
        width "calc((100% - %spx * 2) / 3)" % gapx-px
  for gapx in range(1,10,1)
    .up-col3-{gapx}\\\%\\\@tb
      column-gap (gapx)%
      > *
        width "calc((100% - %s% * 2) / 3)" % gapx

@media only screen and (max-width: 599px)
  for gapx-px in range(0,100,10)
    .up-col3-{gapx-px}\\\@sp
      column-gap (gapx-px)px
      > *
        width "calc((100% - %spx * 2) / 3)" % gapx-px
  for gapx in range(1,10,1)
    .up-col3-{gapx}\\\%\\\@sp
      column-gap (gapx)%
      > *
        width "calc((100% - %s% * 2) / 3)" % gapx

@media only screen and (max-width: 599px)
  .up-col-1\\\@sp
    & > *
      width 100%
