/*! ===================================
 共通リスト　list-cmp
================================== */
/*! パンくずリスト */
.breadcrumb
  margin-top 10px
  .item
    display inline-block
    &:not(:last-of-type):after
      chevron(right)
      display inline-block
      margin-right 5px
      margin-left 10px
  .now
    color color1
  @media only screen and (max-width 599px)
    display none

/*! 共通リスト１（フロー） */
.list-cmp01
  .head
    position relative
    padding-left 30px
  .headin
    position absolute
    top 0
    left 0
    line-height 1
    &:after
      content '.'
  .txt
    padding-left 30px

/*! 共通リスト２ */
.list-cmp02
  .img
    a
      display block
  .cate
    display flex
    flex-wrap wrap
    span
      background gray
      color #fff
      padding 0 5px
      margin-right 2px
      margin-bottom 2px
      font-size 14px

/*! 共通リスト３ */
.list-cmp03
  .item
    padding 20px
  .item:not(:last-child)
    border-bottom 1px solid gray
  .datattl
    width 150px
    flex-shrink 0
    margin-right 20px
  @media only screen and (max-width 599px)
    .item
      flex-wrap wrap
      padding 20px 10px
    .datattl
      width 100%
      margin-bottom 5px
    .data
      width 100%

/*! 共通リスト４ */
.list-cmp04
  a
    display block
    padding 10px 20px
    border 1px solid gray
  .img
    width 50px
    height 50px
    margin 0 auto 10px
  .head
    line-height 1.2
  .headin02
    display block
    font-weight normal

/*! 共通リスト６ */
.list-cmp06
  a
    display block
    width 200px
    background gray
    color #fff
    text-align center
    padding 10px

/*! 共通リスト７ */
.list-cmp07
  .item
    margin-bottom 50px
  .datattl
    margin-bottom 10px
    padding-bottom 10px
    border-bottom 1px solid #999
    font-weight bold
    font-size 18px

/*! 共通リスト８ */
.list-cmp08
  .item
    display flex
  .item:not(:last-child)
    border-bottom 1px solid #999
  .datattl
    display flex
    flex-shrink 0
    justify-content center
    align-items center
    padding 10px
    max-width 100px
    background #000
    color #fff
    font-weight bold
  .data
    padding 10px

/*! 共通リスト９ */
.list-cmp09
  .item
    margin-bottom 30px
  .datattl
    position relative
    padding-top 2px
    padding-right 50px
    padding-left 30px
    color #999
    font-weight bold
    font-size 20px
    line-height 130%
    cursor pointer
    &:before
      position absolute
      top 0
      left 0
      content 'Q'
      font-weight bold
      font-size 20px
    &:after
      position absolute
      top 0
      right 0
      width 30px
      height 30px
      border 1px solid #000
      color #000
      content '+'
      text-align center
      font-size 30px
      line-height 26px
    &.is-parent:after
      content '−'
      line-height 30px
  .data
    position relative
    display none
    margin-top 10px
    padding-left 30px
    &:before
      position absolute
      top 0
      left 0
      content 'A'
      font-weight bold
      font-size 20px
  @media only screen and (max-width 599px)
    .item
      margin-bottom 20px
    .datattl
      padding-right 30px
      padding-left 25px
      font-size 16px
      &:after
        width 20px
        height 20px
        font-size 16px
        line-height 18px
      &.is-parent:after
        line-height 20px
    .data
      padding-left 25px

/*! 共通リスト１０ */
.list-cmp10
  .img
    a
      display block
  .meta
    display flex
    flex-wrap wrap
    align-items flex-start
    align-content flex-start
  .time
    display inline-block
    margin-right 10px
  .cate
    display flex
    flex-wrap wrap
    align-items flex-start
    span
      background gray
      color #fff
      padding 0 5px
      margin-right 2px
      margin-bottom 2px
      font-size 14px
  @media only screen and (max-width 599px)
    .time
      width 100%


/*! 共通テーブル１ */
.table-cmp01
  .head
    font-weight bold
    font-size 18px
  .txt
    margin-bottom 10px
    text-align right
  .wrap
    overflow auto
  .table
    width 100%
    border-collapse collapse
  .datattl,
  .data
    padding 10px
    min-width 200px
    border 1px solid #999
    vertical-align top
  .datattl
    width 30%
    background #000
    color #fff
    text-align left
  .data
    &:first-of-type
      width 40%
    &:last-of-type
      width 30%
      text-align right

/*! 共通テーブル２ */
.table-cmp02
  .head
    margin-bottom 10px
    text-align center
    font-weight bold
    font-size 18px
  .txt
    margin-top 5px
    text-align right
  .wrap
    overflow auto
  .table
    width 100%
    border 1px solid #999
    border-collapse collapse
  .datattl01
    padding 5px
    background #eee
  .datattl02,
  .data
    padding 5px
  .data
    text-align center

/*! 共通テーブル３ */
.table-cmp03
  .head
    margin-bottom 10px
    font-weight bold
    font-size 18px
  .txt01
    margin-bottom 10px
  .txt02
    margin-top 10px
  .wrap
    overflow auto
  .table
    width 100%
    border-collapse collapse
    border-bottom 1px solid #999
  .item:nth-child(2n)
    background #eee
  .datattl01
    padding 5px
    background #999
    color #fff
  .datattl02,
  .data
    padding 5px
    min-width 100px
  .data
    text-align center

/*! 共通テーブル４ */
.table-cmp04
  .warp
    overflow auto
  .table
    width 100%
  .datattl01
    padding 5px
    border-bottom 1px solid #000
    border-left 1px solid #000
    color color1
    font-weight bold
    &:first-child
      border-left none
  .datattl02
    border-right 1px solid #000
  .thead .datattl02
    border-bottom 1px solid #000
  .datattl03
    border-bottom 1px solid #000
    &:nth-child(2n)
      border-left 1px solid #000
  .datattl02,
  .data
    padding 10px
    min-width 55px
  .data
    text-align center
    &:nth-child(2n)
      border-left 1px solid #000
