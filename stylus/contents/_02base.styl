/*! 共通コンテンツ間隔 */
.area
  margin-top 80px
  margin-bottom 80px
  @media only screen and (max-width 599px)
    margin-top 50px
    margin-bottom 50px


/*! 共通要素読み込みコメント（取り込み後削除） */
[class*='load-']
  position relative
  min-height 50px
  border 3px solid #00bcd4
  &:before
    position absolute
    z-index 100
    display block
    background #00bcd4
    color yellow
    content '共通要素'
    text-align center
    font-weight bold
