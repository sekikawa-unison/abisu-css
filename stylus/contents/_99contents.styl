/*!*
グローバルナビ
gnav
*/
.gnav
  position relative
  z-index 100
  padding 10px 0
  border-bottom 1px solid #d9d9d9
  &.fixed
    position fixed
    top 0
    left 0
    z-index 200
    width 100%
    height auto
    background #fff
    box-shadow 0 0 5px 0 #999
    cursor pointer
  .wrap
    display flex
    flex-wrap wrap
  .navlogo
    display none
    img
      max-height 40px
  .list01
    display flex
    flex-wrap wrap
    justify-content space-around
    width 100%
  .item01
    text-align center
    font-size 16px
    > a, .itemin
      display block
      cursor pointer
      padding 5px
  .item01.-parent
    position relative
    &:hover
      .list02
        visibility visible
        opacity 1
  .list02
    position absolute
    top 100%
    left 50%
    visibility hidden
    padding-top 10px
    width 200px
    background rgba(#fff, 0.8) content-box
    opacity 0
    transition 0.5s
    transform translateX(-50%)
  .item02
    a
      display block
      padding 5px
  @media only screen and (max-width: 1024px)
    position fixed
    top 0
    right 0
    overflow auto
    width 100%
    max-width 300px
    height 100%
    background rgba(255, 255, 255, 0.9)
    transition transform ease 0.5s
    transform translate3d(100%, 0, 0)
    -webkit-overflow-scrolling touch
    &.action
      z-index 250
      transform translate3d(0%, 0, 0)
    .wrap
      padding-bottom 100px
    .navlogo
      display block
      margin-bottom 20px
      padding-right 40px
      width 100%
      font-weight bold
      font-size 20px
    .item01
      margin 0 0 10px 0
      min-height 40px
      width 100%
      text-align left
    .list02
      position relative
      top 0
      left 0
      visibility visible
      padding-left 20px
      padding-top 0
      background none
      opacity 1
      transform none
      a
        position relative
        padding 2px 0 2px 20px
      a:before
        position absolute
        top 13px
        left 0
        display block
        width 10px
        height 1px
        background #000
        content ''
[data-element-id] .gnav.fixed
  position relative

/*! ハンバーガーメニュー  */
.toggle
  position fixed !important
  top 0px
  right 0px
  z-index 251
  width 42px
  height 42px
  background #170302
  opacity 0.8
  cursor pointer
  display none
  .bar
    position absolute
    top 50%
    left 7px
    display block
    margin-top -1px
    padding 0
    width 28px
    height 2px
    background #fff
    text-indent 9999px
    transition ease 0.4s
    -webkit-transition ease 0.4s
    &:before, &:after
      position absolute
      left 0
      display block
      width 28px
      height 2px
      background #fff
      content ''
    &:before
      top -10px
    &:after
      top 10px
.toggle.active .bar
  transform rotate(-45deg)
  -webkit-transform rotate(-45deg)
  -ms-transform rotate(-45deg)
  &:after, &:before
    top 0
    left 0
    transform rotate(90deg)
    -webkit-transform rotate(90deg)
    -ms-transform rotate(90deg)
@media only screen and (max-width: 1024px)
  .toggle
    display block !important

.overlay:after
  position fixed
  top 0
  left 0
  z-index 249
  width 100%
  height 100vh
  background #000
  content ''
  opacity 0.3
  transform translate3d(0, 0, 0) !important
  -webkit-transform translate3d(0, 0, 0) !important

