/*!********************************************
    モジュール（共通機能群）
*********************************************/
/*!h1ページタイトル*/
.pagettl
  display none
[data-element-id] .pagettl
  display none

/*!トップへ戻る*/
.totop
  position fixed
  right 20px
  bottom 20px
  z-index 200
  width 40px
  height 40px
  border-radius 50%
  background #000
  color #fff
  text-align center
  font-size 20px
  line-height 40px
  cursor pointer
  &:before
    content '\f077'
    font-weight bold
    font-family 'Font Awesome 5 Free'
  @media only screen and (max-width: 1024px)
    right 10px
    bottom 50px

/*!グローバルナビの基本設定*/
#gnav.fixed
  position fixed
  top 0
  left 0
  z-index 200
  width 100%
  height auto
  background #fff
  box-shadow 0 0 5px 0 #999
  cursor pointer

[data-element-id] #gnav.fixed
  position relative

@media only screen and (max-width: 1024px)
  #gnav
    position fixed
    top 0
    right 0
    overflow auto
    width 300px
    height 100%
    background rgba(255, 255, 255, 0.9)
    transition transform ease 0.5s
    transform translate3d(100%, 0, 0)
    -webkit-overflow-scrolling touch
    &.action
      z-index 250
      transform translate3d(0%, 0, 0)
    .wrap
      padding-bottom 100px
  .toggle
    position fixed !important
    top 0px
    right 0px
    z-index 251
    display block !important
    width 42px
    height 42px
    background #170302
    opacity 0.8
    cursor pointer
    .bar
      position absolute
      top 50%
      left 7px
      display block
      margin-top -1px
      padding 0
      width 28px
      height 2px
      background #fff
      text-indent 9999px
      transition ease 0.4s
      -webkit-transition ease 0.4s
      &:before, &:after
        position absolute
        left 0
        display block
        width 28px
        height 2px
        background #fff
        content ''
      &:before
        top -10px
      &:after
        top 10px
  .toggle.active .bar
    transform rotate(-45deg)
    -webkit-transform rotate(-45deg)
    -ms-transform rotate(-45deg)
    &:after, &:before
      top 0
      left 0
      transform rotate(90deg)
      -webkit-transform rotate(90deg)
      -ms-transform rotate(90deg)
  .overlay:after
    position fixed
    top 0
    left 0
    z-index 249
    width 100%
    height 100vh
    background #000
    content ''
    opacity 0.3
    transform translate3d(0, 0, 0) !important
    -webkit-transform translate3d(0, 0, 0) !important

/*!下部固定コンテンツ*/
.fix-bottom
  display none
  @media only screen and (max-width: 1024px)
    position fixed
    bottom 0
    left 0
    z-index 250
    display flex
    width 100%
    .item
      padding 10px 5px
      width 50%
      text-align center
    .tel
      background #000
      color #fff
      a:before
        margin-right 5px
        content '\f879'
        font-weight 600
        font-family 'Font Awesome 5 Free'
    .contact
      background #eee
      color #000
      a:before
        margin-right 5px
        content '\f0e0'
        font-weight 600
        font-family 'Font Awesome 5 Free'

/*!メインビジュアル*/
.mainimg
  position relative
  overflow hidden
  img
    width 100%
  .uk-slidenav-position
    position relative
    overflow hidden
    min-height 300px
  .uk-slidenav-position:after
    display block
    padding-top 50%
    content ''
  .uk-slideshow
    position absolute
    top 0
    height 100% !important
  .uk-slideshow li
    height 100% !important
  .uk-slideshow .uk-flex
    height 100%
  .uk-slideshow img
    width 100%
    height 100%
    /*!IE対策*/
    font-family 'object-fit: cover; object-position: 50% 50%;'
    -o-object-fit cover
    object-fit cover
    -o-object-position 50% 50%
    object-position 50% 50%

.homevisual
  position relative
  .img
    position relative
    min-height 300px
    &:before
      display block
      padding-top 40%
      content ''
    img
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      /*!IE対策*/
      font-family 'object-fit: cover; object-position: 50% 50%;'
      -o-object-fit cover
      object-fit cover
      -o-object-position 50% 50%
      object-position 50% 50%
  .head
    position absolute
    top 50%
    left 50%
    flex-flow gothic
    font-weight bold
    font-size 40px
    transform translate(-50%, -50%)
  @media only screen and (max-width: 599px)
    .head
      font-size 28px

/*!フォーム*/
.form
  .item
    display flex
    flex-wrap nowrap
    padding 20px 0
    border-bottom 2px solid #999
  .datattl
    display flex
    flex-shrink 0
    justify-content space-between
    align-items flex-start
    width 200px
    color color1
    font-weight bold
  .require
    display inline-block
    margin-left 10px
    padding 0 4px
    background color3
    color #fff
    font-size 14px
    line-height 1.6em
  .data
    padding-left 50px
    width 100%
    input
      box-sizing border-box
      margin-top 5px
      margin-bottom 5px
      padding 5px
      width 100%
      border 1px solid #999
    input[type='radio']
      display none
    input[type='radio'] + label
      position relative
      box-sizing border-box
      margin-right 20px
      padding-left 20px
      line-height 200%
    input[type='radio'] + label::before
      position absolute
      top 4px
      left 0
      display block
      width 10px
      height 10px
      border 1px solid #303841
      border-radius 50%
      background #fff
      box-shadow inset 1px 1px 0 1px #999
      content ''
    input[type='radio']:checked + label::after
      position absolute
      top 7px
      left 3px
      display block
      width 7px
      height 7px
      border-radius 50%
      background #303841
      content ''
    input[type='radio']:checked + label
      transition 0.6s
    input[type='number']
      margin-right 10px
      width 70px
    select
      box-sizing border-box
      padding 5px
      border 1px solid #999
      color inherit
    textarea
      box-sizing border-box
      padding 5px
      width 100%
      height 170px
      border 1px solid #999
      color inherit
      font-size inherit
      font-family inherit
  .data01 div
    display inline-block
  .btn
    margin-top 30px
    button
      margin 10px 20px
      padding 0.2em
      width 200px
      border none
      border-radius 2em
      background color3
      color #fff
      text-align center
      transition 0.3s all ease
    button:hover
      opacity 0.6
      cursor pointer
  @media only screen and (max-width: 1024px)
    .item
      flex-wrap wrap
    .datattl
      display block
      margin-bottom 10px
    .data
      padding-left 0


/*!2カラムコンテンツ
（サイドメニューとメインコンテンツ）*/
.column2
  .inner
    display flex
    flex-wrap nowrap
    justify-content space-between
  .side
    width 200px
  .main
    width calc(100% - 250px)
  @media only screen and (max-width: 1024px)
    .inner
      flex-wrap wrap
    .side
      order 3
      margin-bottom 5%
      width 100%
    .main
      order 2
      margin-bottom 5%
      width 100%
